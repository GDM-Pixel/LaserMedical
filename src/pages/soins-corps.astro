---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import HeroBox from "../components/HeroBox.astro";
import { Image } from "astro:assets";
import Footer from "../components/Footer.astro";
import AcideHyal1 from "../assets/img/acide-hyal1.png";
import AcideHyal2 from "../assets/img/acide-hyal2.png";
import ZoneLevres from "../assets/img/zone-levre.png";
import ZoneCernes from "../assets/img/zone-cernes.png";
import ZoneRides from "../assets/img/zone-rides.png";
import ZonePeau from "../assets/img/zone-peau.png";
import ZoneSillonNG from "../assets/img/zone-sillon-ng.png";
import ZoneVisageCreuse from "../assets/img/zone-visage-creuse.png";
import ZoneOvalBajoues from "../assets/img/zone-oval-bajoues.png";
import ZoneNez from "../assets/img/zone-nez.png";
import ZoneMains from "../assets/img/zone-mains.png";
import Evaluation from "../assets/img/evaluation.png";
import SeanceInjection from "../assets/img/seance-injection.png";
---

<Layout
	title="Médecine esthétique du visage à la Réunion | Laser Medical"
	description="Découvrez nos techniques de médecine esthétique pour votre visage..">
	<div class="hero-element">
		<div class="overlay"></div>
		<Header />
	</div>
	<main>
		<section class="soins-visage text-center mt-24">
			<h1 class="section-title mb-6 px-6 text-lg md:text-xxl">Nos soins pour votre corps</h1>
			<p class="section-intro text-base max-w-3xl mx-auto px-6">
				Découvrez toutes les techniques de médecine esthétique disponibles au
				centre laser médical et identifiez la solution qui correspond au mieux à
				vos attentes.
			</p>
			<div class="grid md:grid-cols-2 grid-cols-1 gap-8 max-w-7xl mx-auto mt-12 px-6">
				<a class="tile-soins" href="/cryolipolyse/">
					<h2>Cryolipolyse</h2><div class="effect"></div>
					<div class="overlay"></div>
					<img
						src="/img/vignette-cryolipolyse-accueil.jpg"
						alt="Cryolipolyse"
					/>
				</a><a class="tile-soins" href="/exilis-elite/">
					<h2>Radiofréquence</h2><div class="effect"></div>
					<div class="overlay"></div>
					<img
						src="/img/exilis-elite-vignette-autres-soins.jpg"
						alt="Radiofréquence"
					/>
				</a>
			</div>
		</section>
	</main>

	<section class="tarifs mt-12 text-center pb-24 px-8">
		<a href="/demander-un-rdv/" class="cta rounded brown">Prendre RDV</a>
	</section>
</Layout>
<!-- FIN DE GAUCHE DROITE -->

<Footer />

<style lang="scss">
	main {
		margin: auto;
	}
	.tile-soins {
		@apply relative transition-all duration-500 rounded-md flex flex-col justify-center items-center  text-center h-[300px];
		.effect {
			@apply absolute w-[300px] h-[100px] z-30 transition-all duration-200 ease-in-out border-2 border-white;
		}
		.overlay {
			@apply bg-black opacity-30 absolute w-full h-full z-20 transition-all duration-200 ease-in-out;
		}
		h2 {
			@apply flex flex-col text-white text-md font-semibold z-30 max-w-[290px] mx-auto p-4;
		}
		img {
			@apply absolute inset-0 w-full h-full object-cover z-10 opacity-100;
		}
		&:hover {
			@apply bg-black transition-all duration-200 ease-in-out;
			.effect {
				@apply w-full h-full transition-all duration-200 ease-in-out border-2 border-white opacity-30;
			}
			h2 {
			}
			img {
				@apply opacity-100 transition-all duration-500 ease-in-out;
			}
			.overlay {
				@apply bg-black opacity-10 absolute w-full h-full z-20 transition-all duration-200 ease-in-out;
			}
		}
	}
	.hero-element {
		@apply relative bg-cover bg-center bg-grey-600;
	}
	.overlay {
		@apply absolute top-0 bottom-0 left-0 right-0 pointer-events-none  transition-all duration-500;
	}
</style>
