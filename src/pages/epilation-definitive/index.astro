import Header from "../../components/Header.astro";
import HeroBox from "../../components/HeroBox.astro";
import Accordion from "../../components/Accordion.astro";
import TarifsEpilationLaser from "../../components/TarifsEpilationLaser.astro";
import TarifAvantage from "../../components/TarifAvantage.astro";
import DeroulementSeanceLaser from "../../assets/img/deroulement-seance-laser.png";
import YoutubeLaserThumbnail from "../../assets/img/youtube-laser-thumbnail.jpg";
import { Image } from "astro:assets";
import Footer from "../../components/Footer.astro";
import EpilationLaser from "../../assets/img/epilation-laser.png";
import PeauMate from "../../assets/img/peau-mate.png";
