---
import "@fancyapps/ui/dist/fancybox/fancybox.css";
//import '@fancyapps/ui/dist/fancybox/fancybox.umd.js';
---

<script
	is:inline
	src="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.umd.js"
></script>
<div class="gallery" id="MyCarousel">
	<a data-src="/img/cernes-pigmentes-avant.jpg" data-caption="Cernes pigmentées - Avant" data-fancybox="injections">
		<img src="/img/cernes-pigmentes-avant.jpg" width="630" height="354" />
	</a>
	<div class="flex gap-4">
		<a class="max-w-[141px]" data-src="/img/cernes-pigmentes-apres.jpg" data-caption="Cernes pigmentées - Après" data-fancybox="injections">
			<img src="/img/cernes-pigmentes-apres.jpg" width="141" height="78" />
		</a>
		<a class="max-w-[141px]" data-src="/img/cernes-avant.jpg" data-caption="Cernes - Avant" data-fancybox="injections">
			<img src="/img/cernes-avant.jpg" width="141" height="78" />
		</a>
		<a class="max-w-[141px]" data-src="/img/cernes-apres.jpg" data-caption="Cernes - Après" data-fancybox="injections">
			<img src="/img/cernes-apres.jpg" width="141" height="78" />
		</a>

	</div>
</div>

<style lang="scss">
	.gallery {
		@apply flex flex-col gap-4;
		img {
			@apply w-full;
		}
	}
</style>

<script>
	function initializeFancybox() {
		//@ts-ignore
		Fancybox.bind("[data-fancybox]", {
			Thumbs: {
				type: "classic",
			},
		});
	}
	initializeFancybox();
	document.addEventListener("DOMContentLoaded", initializeFancybox);
	document.addEventListener("astro:page-load", initializeFancybox);
</script>
