---
interface Props {
	//title: string;
	//body: string;
	//href: string;
}
import * as animations from "./animations.js";
import { Image } from "astro:assets";
---

<section class="herobox-home">
	
		<div class="container" transition:animate={animations.myFadeSlide}>
			<h1>Médecine esthétique & Anti-âge</h1>
			<p class="baseline">
				Les docteurs Lefèvre & Chami vous accueillent dans leurs cabinets de
				Saint-Denis et Saint-Leu à la Réunion
			</p>
			<a href="#" class="cta white sktn big">Découvrir nos traitements</a>
		</div>
	
</section>
<style lang="scss">
	.herobox-home {
		@apply top-0 w-full overflow-clip  flex flex-col justify-center items-center text-white xl:aspect-[16/8] lg:aspect-[16/7.5] md:aspect-[16/10] sm:aspect-[16/12] xs:aspect-[16/16] mt-0 z-0;
		
		.container {
			@apply -mt-10 md:max-w-7xl sm:max-w-6xl text-center xs:w-full xs:max-w-full ;
		}
		h1 {
			@apply text-xxxl font-bold text-white mb-16;
		}
		.baseline {
			@apply xl:text-[24px]  text-white max-w-2xl mx-auto mb-16;
		}
		.intro {
			@apply max-w-sm text-md xs:mx-auto sm:mr-auto sm:ml-0;
		}
		.cta_container {
			@apply mt-6 gap-4 flex sm:text-sm xs:text-xs md:text-base xs:mx-auto xs:justify-center sm:justify-start;
		}
	}
	.left-bg-clip-1 {
		@apply absolute h-full w-3/5 top-0 -left-12 bg-grey-500 opacity-80 shadow-[0_20px_5px_rgba(0,0,0,1)];
	}

	@keyframes balancement1 {
		0%,
		100% {
			transform: translateX(0);
		}
		50% {
			transform: translateX(
				20px
			); /* Ajustez la valeur ici pour la distance désirée */
		}
	}
	@keyframes balancement2 {
		0%,
		100% {
			transform: translateX(0);
		}
		50% {
			transform: translateX(
				30px
			); /* Ajustez la valeur ici pour la distance désirée */
		}
	}

	@keyframes balancement3 {
		0%,
		100% {
			transform: translateX(0);
		}
		50% {
			transform: translateX(
				60px
			); /* Ajustez la valeur ici pour la distance désirée */
		}
	}

	@keyframes opacity1 {
		0%,
		100% {
			opacity: 0.2;
		}
		50% {
			opacity: 1; /* Ajustez la valeur ici pour la distance désirée */
		}
	}
	.hero-left-bg-1,
	.hero-left-bg-2,
	.hero-mid-bg-1,
	.hero-mid-bg-2,
	.hero-mid-bg-3,
	.hero-red-1,
	.hero-red-2,
	.hero-red-3,
	.hero-right-1,
	.hero-right-2 {
		@apply absolute h-full;
	}
	.effect-container {
		@apply absolute h-full w-full top-0 left-0 flex justify-between;
		.left-effect {
			@apply h-full w-1/3 relative;
		}
		.mid-effect {
			@apply h-full w-1/3  relative;
		}
		.right-effect {
			@apply h-full w-1/3  relative;
		}
	}

	.hero-left-bg-1 {
		@apply -left-40 bottom-0 object-cover h-full top-0;
	}
	.hero-left-bg-2 {
		@apply left-0 h-full;
		opacity: 0.2;
		animation: opacity1 5s ease-in-out infinite;
	}
	.hero-mid-bg-1 {
		@apply left-8;
		opacity: 0.2;
		animation:
			balancement1 5s ease-in-out infinite,
			opacity2 9s ease-in-out infinite;
	}
	.hero-mid-bg-2 {
		@apply left-12;
		opacity: 0.2;
		animation:
			balancement2 5s ease-in-out infinite,
			opacity1 7s ease-in-out infinite;
		animation-delay: 1s;
	}
	.hero-mid-bg-3 {
		@apply left-6;
		opacity: 0.2;
		animation:
			balancement1 4s ease-in-out infinite,
			opacity1 8s ease-in-out infinite;
		animation-delay: 1.5s;
	}

	.hero-red-1 {
		@apply left-0;
		animation: balancement3 6s ease-in-out infinite;
		animation-delay: 2.5s;
	}
	.hero-red-2 {
		@apply left-12;
		opacity: 0.2;
		animation:
			balancement2 6s ease-in-out infinite,
			opacity1 3s ease-in-out infinite;
		animation-delay: 3.5s;
	}
	.hero-red-3 {
		@apply left-36;
		opacity: 0.2;
		animation: balancement1 6s ease-in-out infinite;
		animation-delay: 0.5s;
	}

	.hero-right-1 {
		@apply right-[0%];
		opacity: 0.2;
		animation: opacity1 7s ease-in-out infinite;
		animation-delay: 2.5s;
	}
	.hero-right-2 {
		@apply right-[0%];
		animation: opacity1 9s ease-in-out infinite;
		opacity: 0.2;
		animation-delay: 1.5s;
	}

	/*ROUGE XS*/
	@media screen and (min-width: 240px) and (max-width: 639px) {
		.herobox {
			background-position: 47% 24%;
			background-size: cover;
		}
		.left-bg-clip-1 {
			@apply left-0 w-full;
			clip-path: none;
		}

		.hero-mid-bg-1,
		.hero-mid-bg-2,
		.hero-mid-bg-3,
		.hero-red-1,
		.hero-red-2,
		.hero-red-3 {
			@apply hidden;
		}

		.hero-left-bg-2 {
			@apply -left-40 h-full;
			opacity: 0.2;
			animation: opacity1 5s ease-in-out infinite;
		}
	}
	/*ORANGE SM*/
	@media screen and (min-width: 640px) and (max-width: 767px) {
		.herobox {
			background-position: 39% 24%;
			background-size: 163%;
		}
		.left-bg-clip-1 {
			@apply -left-16 w-full;
			clip-path: polygon(0 0, 97% 0, 58% 100%, 0% 100%);
		}
	}

	/*JAUNE MD*/
	@media screen and (min-width: 768px) and (max-width: 1023px) {
		.herobox {
			background-position: 25% 26%;
			background-size: 136%;
		}
		.left-bg-clip-1 {
			@apply -left-12 w-4/5;
			clip-path: polygon(0 0, 100% 0, 58% 100%, 0% 100%);
		}
	}
	/*VERT LG*/
	@media screen and (min-width: 1024px) and (max-width: 1279px) {
		.herobox {
			background-position: 40% 26%;
			background-size: 136%;
		}
		.left-bg-clip-1 {
			@apply -left-12 w-4/5;
			clip-path: polygon(0 0, 90% 0, 58% 100%, 0% 100%);
		}

		.hero-mid-bg-1 {
			@apply left-0;
		}
		.hero-mid-bg-2 {
			@apply left-4;
		}
		.hero-mid-bg-3 {
			@apply left-0;
		}
	}

	/*BLEU XL*/
	@media screen and (min-width: 1280px) {
		.left-bg-clip-1 {
			clip-path: polygon(0 0, 100% 0, 68% 100%, 0% 100%);
		}
	}
</style>
